{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article on a key of article which makes the article ID url",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 15,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments on selected article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 9,
          "body": "Superficially charming",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-01-01T03:08:00.000Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increases vote count of article by inc_votes (to decrease set negative value)",
    "body": { "inc_votes": 1 },
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 98,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Add's a comment on the selected article",
    "body": {
      "username": "icellusedkars",
      "body": "Superficially charming"
    },
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 9,
          "body": "Superficially charming",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-01-01T03:08:00.000Z"
        }
      ]
    }
  }
}
